<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_Journey"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_height="180dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout_Journey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:paddingTop="@dimen/font_16dp"
               android:layout_height="wrap_content">

               <ImageView
                   android:id="@+id/imgAccount"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   android:src="@drawable/icons8_account_64"
                   android:paddingLeft="@dimen/font_16dp"
                   android:layout_width="@dimen/font_48dp"
                   android:layout_height="@dimen/font_48dp"/>

               <TextView
                   android:id="@+id/txtHi"
                   android:text="Hi"
                   android:textSize="@dimen/font_32sp"
                   android:layout_marginLeft="@dimen/font_16dp"
                   app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toRightOf="@id/imgAccount"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/txtUserName"
                   android:text="Nguyen Van Quan"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toRightOf="@id/txtHi"
                   android:textSize="@dimen/font_32dp"
                   android:layout_marginLeft="@dimen/font_8dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_marginTop="@dimen/font_8dp"
                   android:id="@+id/constCalenda"
                   app:layout_constraintTop_toBottomOf="@id/txtHi"
                   app:layout_constraintStart_toStartOf="@id/txtHi"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <TextView
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintLeft_toLeftOf="parent"
                       android:id="@+id/txtDay"
                       android:text="20"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

                   <TextView
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintLeft_toRightOf="@id/txtDay"
                       android:id="@+id/txtthang"
                       android:layout_marginLeft="@dimen/font_4dp"
                       app:layout_constraintStart_toEndOf="@id/txtDay"
                       android:text="thÃ¡ng"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:id="@+id/txtMonth"
                       android:text="2"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintLeft_toRightOf="@id/txtthang"
                       android:layout_marginLeft="@dimen/font_4dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:id="@+id/txtYear"
                       android:text="2020"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintLeft_toRightOf="@id/txtMonth"
                       android:layout_marginLeft="@dimen/font_4dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </androidx.constraintlayout.widget.ConstraintLayout>

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_marginTop="@dimen/font_16dp"
                   android:id="@+id/count"
                   app:layout_constraintTop_toBottomOf="@id/constCalenda"
                   app:layout_constraintStart_toStartOf="@id/txtHi"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <TextView
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintLeft_toLeftOf="parent"
                       android:id="@+id/txtNumberItem"
                       android:text="5"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

                   <TextView
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintLeft_toRightOf="@id/txtNumberItem"
                       android:id="@+id/txtEntries"
                       android:layout_marginLeft="@dimen/font_4dp"
                       android:text="entries"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </androidx.constraintlayout.widget.ConstraintLayout>

           </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvJourney"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_Journey"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_icon"
        app:layout_anchorGravity="bottom|end"
        app:layout_anchor="@id/nestedView"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>