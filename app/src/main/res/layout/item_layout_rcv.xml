<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/const_item_layout_rcv"
    android:layout_margin="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/item_const_calendar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_day_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/color_background_main"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_background_main"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txt_day_item"
            android:id="@+id/txt_th_item"
            android:layout_marginLeft="@dimen/dp_2"
            app:layout_constraintStart_toEndOf="@id/txt_day_item"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_background_main"
            android:textStyle="bold"
            android:id="@+id/txt_month_item"
            android:text="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txt_th_item"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_shortline"
            app:layout_constraintStart_toEndOf="@id/txt_month_item"
            app:layout_constraintTop_toTopOf="parent"
            android:text="-"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_2"
            android:textColor="@color/color_background_main"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_background_main"
            android:textStyle="bold"
            android:id="@+id/txt_year_item"
            android:text="2020"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txt_shortline"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_background_main"
            android:textStyle="bold"
            android:id="@+id/txt_th"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txt_year_item"
            android:text="Monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_const_content"
        app:layout_constraintTop_toBottomOf="@id/item_const_calendar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_hour_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="17"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_point"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txt_hour_item"
            android:text=":"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_minute_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txt_point"
            android:text="30"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_contain_item"
            app:layout_constraintTop_toBottomOf="@id/txt_hour_item"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_4"
            android:text="Di choi tam chuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_item"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_account_box_blue_24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"/>

        <TextView
            android:id="@+id/txt_position_item"
            app:layout_constraintTop_toBottomOf="@id/img_item"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:text="85 vu trong phung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_icon_happy_item"
            app:layout_constraintTop_toTopOf="@id/txt_position_item"
            app:layout_constraintRight_toLeftOf="@id/img_item"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:src="@drawable/ic_mood_black_24dp"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"/>

        <ImageView
            android:id="@+id/img_icon_collect_item"
            android:src="@drawable/ic_action_black_24dp"
            app:layout_constraintTop_toTopOf="@id/txt_position_item"
            app:layout_constraintEnd_toStartOf="@id/img_icon_happy_item"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"/>

        <TextView
            android:id="@+id/txt_temperature_c"
            android:text="Â°C"
            app:layout_constraintTop_toTopOf="@id/img_icon_collect_item"
            app:layout_constraintBottom_toBottomOf="@id/img_icon_collect_item"
            app:layout_constraintEnd_toStartOf="@id/img_icon_collect_item"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_temperature_item"
            app:layout_constraintTop_toTopOf="@id/img_icon_collect_item"
            app:layout_constraintBottom_toBottomOf="@id/img_icon_collect_item"
            app:layout_constraintEnd_toStartOf="@id/txt_temperature_c"
            android:text="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>