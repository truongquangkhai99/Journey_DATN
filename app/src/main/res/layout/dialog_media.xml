<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/font_16dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_DL_Media"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Media..."
        android:textSize="@dimen/font_32dp"
        android:textColor="#03A9F4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constMedia"
        app:layout_constraintTop_toBottomOf="@id/txt_DL_Media"
        app:layout_constraintStart_toStartOf="@id/txt_DL_Media"
        android:layout_marginTop="@dimen/font_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_DL_Gallery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_DL_File"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icons_gallery_80"
            android:layout_marginLeft="@dimen/font_16dp"
            android:layout_width="@dimen/font_48dp"
            android:layout_height="@dimen/font_48dp"/>

        <TextView
            android:id="@+id/txt_DL_Gallery"
            app:layout_constraintStart_toStartOf="@id/img_DL_Gallery"
            app:layout_constraintTop_toBottomOf="@id/img_DL_Gallery"
            app:layout_constraintEnd_toEndOf="@id/img_DL_Gallery"
            android:layout_marginTop="@dimen/font_8dp"
            android:text="Gallery"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_DL_File"
            app:layout_constraintStart_toEndOf="@id/img_DL_Gallery"
            app:layout_constraintEnd_toStartOf="@id/img_DL_Photo"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icons8_file_48"
            android:layout_marginLeft="@dimen/font_16dp"
            android:layout_width="@dimen/font_48dp"
            android:layout_height="@dimen/font_48dp"/>

        <TextView
            android:id="@+id/txt_DL_File"
            app:layout_constraintStart_toStartOf="@id/img_DL_File"
            app:layout_constraintTop_toBottomOf="@id/img_DL_File"
            app:layout_constraintEnd_toEndOf="@id/img_DL_File"
            android:layout_marginTop="@dimen/font_8dp"
            android:text="File"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_DL_Photo"
            app:layout_constraintStart_toEndOf="@id/img_DL_File"
            app:layout_constraintEnd_toStartOf="@id/img_DL_Video"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icons8_unsplash_50"
            android:layout_marginLeft="@dimen/font_16dp"
            android:layout_width="@dimen/font_48dp"
            android:layout_height="@dimen/font_48dp"/>

        <TextView
            android:id="@+id/txt_DL_Photo"
            app:layout_constraintStart_toStartOf="@id/img_DL_Photo"
            app:layout_constraintTop_toBottomOf="@id/img_DL_Photo"
            app:layout_constraintEnd_toEndOf="@id/img_DL_Photo"
            android:layout_marginTop="@dimen/font_8dp"
            android:text="Photo"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_DL_Video"
            app:layout_constraintStart_toEndOf="@id/img_DL_Photo"
            app:layout_constraintEnd_toStartOf="@id/img_DL_Microphone"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icons8_video_call_48"
            android:layout_marginLeft="@dimen/font_16dp"
            android:layout_width="@dimen/font_48dp"
            android:layout_height="@dimen/font_48dp"/>

        <TextView
            android:id="@+id/txt_DL_Video"
            app:layout_constraintStart_toStartOf="@id/img_DL_Video"
            app:layout_constraintTop_toBottomOf="@id/img_DL_Video"
            app:layout_constraintEnd_toEndOf="@id/img_DL_Video"
            android:layout_marginTop="@dimen/font_8dp"
            android:text="Video"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_DL_Microphone"
            app:layout_constraintStart_toEndOf="@id/img_DL_Video"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icons8_microphone_48"
            android:layout_marginRight="@dimen/font_16dp"
            android:layout_marginLeft="@dimen/font_16dp"
            android:layout_width="@dimen/font_48dp"
            android:layout_height="@dimen/font_48dp"/>

        <TextView
            android:id="@+id/txt_DL_Microphone"
            app:layout_constraintStart_toStartOf="@id/img_DL_Microphone"
            app:layout_constraintTop_toBottomOf="@id/img_DL_Microphone"
            app:layout_constraintEnd_toEndOf="@id/img_DL_Microphone"
            android:layout_marginTop="@dimen/font_8dp"
            android:text="Microphone"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>