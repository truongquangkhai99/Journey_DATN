<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/dp_16"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_item_detail"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/singapore"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/txt_day_detail"
        app:layout_constraintTop_toBottomOf="@id/img_item_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="28"
        android:textSize="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_16"
        android:textColor="#00BCD4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_month_detail"
        android:text="2"
        android:textSize="@dimen/dp_16"
        android:textColor="#00BCD4"
        app:layout_constraintTop_toTopOf="@id/txt_day_detail"
        app:layout_constraintStart_toEndOf="@id/txt_day_detail"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_year_detail"
        android:text="2020"
        android:textSize="@dimen/dp_16"
        android:textColor="#00BCD4"
        app:layout_constraintTop_toTopOf="@id/txt_day_detail"
        app:layout_constraintStart_toEndOf="@id/txt_month_detail"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_th_detail"
        android:text="Monday"
        android:textSize="@dimen/dp_16"
        android:textColor="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@id/txt_day_detail"
        app:layout_constraintStart_toStartOf="@id/txt_month_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_hour_detail"
        android:text="00"
        android:textSize="@dimen/dp_16"
        android:textColor="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@id/txt_day_detail"
        app:layout_constraintStart_toEndOf="@id/txt_th_detail"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_dots_detail"
        android:text=":"
        android:textSize="@dimen/dp_16"
        android:textColor="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@id/txt_day_detail"
        app:layout_constraintStart_toEndOf="@id/txt_hour_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_minute_detail"
        android:text="00"
        android:textSize="@dimen/dp_16"
        android:textColor="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@id/txt_day_detail"
        app:layout_constraintStart_toEndOf="@id/txt_dots_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_position_detail"
        app:layout_constraintTop_toBottomOf="@id/txt_day_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_16"
        android:text="85 vu trong phung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img_action_detail"
        app:layout_constraintStart_toEndOf="@id/txt_temperature_c_detail"
        app:layout_constraintTop_toTopOf="@id/txt_position_detail"
        app:layout_constraintBottom_toBottomOf="@id/txt_position_detail"
        android:layout_marginLeft="@dimen/dp_8"
        android:src="@drawable/ic_action_black_24dp"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"/>

    <TextView
        android:id="@+id/txt_temperature_detail"
        app:layout_constraintStart_toEndOf="@id/txt_position_detail"
        app:layout_constraintTop_toTopOf="@id/txt_position_detail"
        app:layout_constraintBottom_toBottomOf="@id/txt_position_detail"
        android:layout_marginLeft="@dimen/dp_8"
        android:text="22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_temperature_c_detail"
        app:layout_constraintStart_toEndOf="@id/txt_temperature_detail"
        app:layout_constraintTop_toTopOf="@id/txt_position_detail"
        app:layout_constraintBottom_toBottomOf="@id/txt_position_detail"
        android:text="Â°C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_mood_detail"
        app:layout_constraintStart_toEndOf="@id/img_action_detail"
        app:layout_constraintTop_toTopOf="@id/txt_position_detail"
        app:layout_constraintBottom_toBottomOf="@id/txt_position_detail"
        android:layout_marginLeft="@dimen/dp_8"
        android:src="@drawable/ic_mood_black_24dp"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"/>

    <TextView
        android:id="@+id/txt_contain_detail"
        app:layout_constraintTop_toBottomOf="@id/txt_position_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_16"
        android:text="di choi"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>