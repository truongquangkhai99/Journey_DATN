<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/font_8dp"
    android:paddingBottom="@dimen/font_8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewIconAdd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBoldAdd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgItalicAdd"
                android:src="@drawable/icons8_bold_48"
                android:layout_width="@dimen/font_32dp"
                android:layout_height="@dimen/font_32dp"/>

            <ImageView
                android:id="@+id/imgItalicAdd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgBoldAdd"
                app:layout_constraintEnd_toStartOf="@id/imgUnderlineAdd"
                android:src="@drawable/icons8_italic_52"
                android:layout_marginLeft="@dimen/font_8dp"
                android:layout_width="@dimen/font_32dp"
                android:layout_height="@dimen/font_32dp"/>

            <ImageView
                android:id="@+id/imgUnderlineAdd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgItalicAdd"
                app:layout_constraintEnd_toStartOf="@id/imgBackAdd"
                android:src="@drawable/icons8_underline_48"
                android:layout_marginLeft="@dimen/font_8dp"
                android:layout_width="@dimen/font_32dp"
                android:layout_height="@dimen/font_32dp"/>
            <ImageView
                android:id="@+id/imgBackAdd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgUnderlineAdd"
                app:layout_constraintEnd_toStartOf="@id/imgForwardAdd"
                android:src="@drawable/icons8_back_50_2"
                android:layout_marginLeft="@dimen/font_8dp"
                android:layout_width="@dimen/font_32dp"
                android:layout_height="@dimen/font_32dp"/>

            <ImageView
                android:id="@+id/imgForwardAdd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgBackAdd"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/icons8_forward_48"
                android:layout_marginLeft="@dimen/font_8dp"
                android:layout_width="@dimen/font_32dp"
                android:layout_height="@dimen/font_32dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>