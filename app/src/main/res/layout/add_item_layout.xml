<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/font_8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAdd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgMark"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/icons8_checked_checkbox_50"
                android:layout_width="@dimen/font_32dp"
                android:layout_height="@dimen/font_32dp"/>

            <TextView
                android:id="@+id/txtthangAdd"
                app:layout_constraintLeft_toRightOf="@id/imgMark"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/font_32dp"
                android:text="thÃ¡ng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtMonthAdd"
                app:layout_constraintLeft_toRightOf="@id/txtthangAdd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/font_4dp"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtHourAdd"
                app:layout_constraintLeft_toRightOf="@id/txtMonthAdd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/font_8dp"
                android:text="15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtdotsAdd"
                app:layout_constraintLeft_toRightOf="@id/txtHourAdd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtMinuteAdd"
                app:layout_constraintLeft_toRightOf="@id/txtdotsAdd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imgThreeDotsAdd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/icons8_menu_vertical_48"
                android:layout_width="@dimen/font_32dp"
                android:layout_height="@dimen/font_32dp"/>

            <ImageView
                android:id="@+id/imgTagAdd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/imgThreeDotsAdd"
                android:src="@drawable/icons8_price_tag_50"
                android:layout_marginRight="@dimen/font_16sp"
                android:layout_width="@dimen/font_32dp"
                android:layout_height="@dimen/font_32dp"/>

            <ImageView
                android:id="@+id/imgCalendarAdd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/imgTagAdd"
                android:src="@drawable/icons8_calendar"
                android:layout_marginRight="@dimen/font_16sp"
                android:layout_width="@dimen/font_32dp"
                android:layout_height="@dimen/font_32dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtContainAdd"
        android:paddingTop="@dimen/font_8dp"
        android:paddingBottom="@dimen/font_8dp"
        app:layout_constraintTop_toBottomOf="@id/cardViewAdd"
        app:layout_constraintBottom_toTopOf="@id/rcvAdd"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvAdd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>