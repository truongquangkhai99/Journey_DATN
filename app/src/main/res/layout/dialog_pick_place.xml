<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/font_16dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/txt_DL_Place"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Yen Hoa, Cau Giay, Ha Noi"
        android:textSize="@dimen/font_32dp"
        android:textColor="#03A9F4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constPickPlace"
        app:layout_constraintTop_toBottomOf="@id/txt_DL_Place"
        app:layout_constraintStart_toStartOf="@id/txt_DL_Place"
        android:layout_marginTop="@dimen/font_16dp"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_DL_PickPlace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_DL_RenamePlace"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icons8_pick_place"
            android:layout_marginLeft="@dimen/font_16dp"
            android:layout_width="@dimen/font_48dp"
            android:layout_height="@dimen/font_48dp"/>

        <TextView
            android:id="@+id/txt_DL_Gallery"
            app:layout_constraintStart_toStartOf="@id/img_DL_PickPlace"
            app:layout_constraintTop_toBottomOf="@id/img_DL_PickPlace"
            app:layout_constraintEnd_toEndOf="@id/img_DL_PickPlace"
            android:layout_marginTop="@dimen/font_8dp"
            android:text="Pick a Place"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_DL_RenamePlace"
            app:layout_constraintStart_toEndOf="@id/img_DL_PickPlace"
            app:layout_constraintEnd_toStartOf="@id/img_DL_RemovePlace"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icons8_rename_place"
            android:layout_marginLeft="@dimen/font_24dp"
            android:layout_width="@dimen/font_48dp"
            android:layout_height="@dimen/font_48dp"/>

        <TextView
            android:id="@+id/txt_DL_File"
            app:layout_constraintStart_toStartOf="@id/img_DL_RenamePlace"
            app:layout_constraintTop_toBottomOf="@id/img_DL_RenamePlace"
            app:layout_constraintEnd_toEndOf="@id/img_DL_RenamePlace"
            android:layout_marginTop="@dimen/font_8dp"
            android:text="Rename"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_DL_RemovePlace"
            app:layout_constraintStart_toEndOf="@id/img_DL_RenamePlace"
            app:layout_constraintEnd_toStartOf="@id/img_DL_SetupGPS"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icons8_remove_place"
            android:layout_marginLeft="@dimen/font_16dp"
            android:layout_width="@dimen/font_48dp"
            android:layout_height="@dimen/font_48dp"/>

        <TextView
            android:id="@+id/txt_DL_Photo"
            app:layout_constraintStart_toStartOf="@id/img_DL_RemovePlace"
            app:layout_constraintTop_toBottomOf="@id/img_DL_RemovePlace"
            app:layout_constraintEnd_toEndOf="@id/img_DL_RemovePlace"
            android:layout_marginTop="@dimen/font_8dp"
            android:text="Remove"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_DL_SetupGPS"
            app:layout_constraintStart_toEndOf="@id/img_DL_RemovePlace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icons8_region_80"
            android:layout_marginLeft="@dimen/font_24dp"
            android:layout_marginRight="@dimen/font_16dp"
            android:layout_width="@dimen/font_48dp"
            android:layout_height="@dimen/font_48dp"/>

        <TextView
            android:id="@+id/txt_DL_Video"
            app:layout_constraintStart_toStartOf="@id/img_DL_SetupGPS"
            app:layout_constraintTop_toBottomOf="@id/img_DL_SetupGPS"
            app:layout_constraintEnd_toEndOf="@id/img_DL_SetupGPS"
            android:layout_marginTop="@dimen/font_8dp"
            android:text="Setup GPS"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>