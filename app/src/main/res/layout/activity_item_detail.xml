<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/dp_8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_item_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize">
            <ImageView
                android:id="@+id/img_back_detail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"/>

            <ImageView
                android:id="@+id/img_menu_detail"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"/>

            <ImageView
                android:id="@+id/img_update_detail"
                app:layout_constraintEnd_toStartOf="@id/img_menu_detail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/dp_16"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"/>


            <ImageView
                android:id="@+id/img_share_detail"
                app:layout_constraintEnd_toStartOf="@id/img_update_detail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/dp_16"
                android:src="@drawable/ic_share_black_24dp"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"/>
            <ImageView
                android:id="@+id/img_star_detail"
                app:layout_constraintEnd_toStartOf="@id/img_share_detail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/dp_16"
                android:src="@drawable/ic_star_border_black_24dp"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_detail"
        app:layout_constraintTop_toBottomOf="@id/cardview_item_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </androidx.viewpager.widget.ViewPager>

    <ImageView
        android:id="@+id/img_before"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_navigate_before_blue_24dp"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"/>

    <ImageView
        android:id="@+id/img_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_navigate_next_blue_24dp"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"/>

</androidx.constraintlayout.widget.ConstraintLayout>